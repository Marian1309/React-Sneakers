{
  "extends": ["stylelint-config-standard", "stylelint-order-config-standard"],
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": ["tab"],
    "color-hex-case": "lower",
    "block-no-empty": true,
    "max-nesting-depth": 4,
    "value-keyword-case": "lower",
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
    "no-descending-specificity": null
  }
}
